<div class="container" id="main-tasks-container">
  <h1 class="m-5">My tasks</h1>
    <div id="tasks">
      <ul>
        <% @tasks.each do |task| %>
        <div class="row">
          <li class="col-10"><%= link_to task.title, task_path(task)  %></li>
          <p class="col-2"><%= link_to "Delete",
            task_path(task),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
          %>
          </p>
        </div>
        <br>
      <% end %>
      </ul>
    </div>
  <button class="btn btn-secondary"><%= link_to "Add a new task", new_path %></h4>
</div>
